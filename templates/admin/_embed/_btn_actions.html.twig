{% set _route = app.request.get('_route')|split('_') %}
{% set prefix = _route[0] ~ '_' ~ _route[1] ~ '_' %}

{% if deleteTitle is not defined %}
    {% set deleteTitle = 'Delete this record?' %}
{% endif %}

<a class="btn btn-outline-primary btn-sm" href="{{ path(prefix ~ 'edit', {'id': entity.id}) }}">
    <i class="fa fa-pen fa-fw"></i>
</a>

<a class="btn btn-outline-secondary btn-sm" href="{{ path(prefix ~ 'show', {'id': entity.id}) }}">
    <i class="fa fa-eye fa-fw"></i>
</a>

<form action="{{ path(prefix ~ 'delete', {'id': entity.id}) }}" id="form{{ entity.id }}" method="post" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    <button class="btn btn-outline-danger btn-sm btn-trash"
            data-bs-toggle="modal"
            data-bs-target="#approveDeleteModal"
            data-record-id="{{ entity.id }}"
            data-record-title="{{ deleteTitle }}">
        <i class="fa fa-trash fa-fw"></i>
    </button>
</form>
