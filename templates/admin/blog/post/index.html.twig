{% extends 'admin/layouts/body.html.twig' %}

{% set headerTitle = 'Blog Posts' %}

{% block title %}{{ headerTitle }}{% endblock %}

{% block content %}
    <div class="card shadow-sm">
        <div class="card-header">
            {% include 'admin/_embed/_card/_header.html.twig' with {'headerTitle': headerTitle} %}
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Tags</th>
                    <th>Is active</th>
                    <th>Image</th>
                    <th>Created at</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.category }}</td>
                        <td>{{ post.title }}</td>
                        <td>
                            {% for tag in post.tags %}
                                <span class="badge bg-secondary bg-opacity-10 text-dark">{{ tag.name }}</span>
                            {% endfor %}
                        </td>
                        <td>{{ post.isActive ? 'Yes' : 'No' }}</td>
                        <td><img class="img" src="{{ post.image ? asset_uploaded(post.imagePath)|imagine_filter('squared_thumbnail_tiny') : '#' }}" alt=""></td>
                        <td>{{ post.createdAt|format_date('medium') }}</td>
                        <td>{% include 'admin/_embed/_form/_btn_actions.html.twig' with {'entity': post, 'deleteTitle': post.title} %}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
    {% include 'admin/_embed/_modal/_confirm_deletes.html.twig' %}
{% endblock %}
