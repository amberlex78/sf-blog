{% extends 'admin/layouts/body_card.html.twig' %}

{% block title %}Show Category{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('admin_blog_category_index') }}">Blog Categories</a></li>
    <li class="breadcrumb-item active">Show</li>
{% endblock %}

{% block actions %}
    {% include 'admin/_embed/_card/_actions.html.twig' with {'entity': category} %}
{% endblock %}

{% block content %}
    <table class="table table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ category.slug }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ category.description }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img class="img-fluid" src="{{ asset_uploaded(category.imagePath) }}" alt=""></td>
        </tr>
        <tr>
            <th>Seo title</th>
            <td>{{ category.seoTitle }}</td>
        </tr>
        <tr>
            <th>Seo keywords</th>
            <td>{{ category.seoKeywords }}</td>
        </tr>
        <tr>
            <th>Seo description</th>
            <td>{{ category.seoDescription }}</td>
        </tr>
        <tr>
            <th>Created at</th>
            <td>{{ category.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated at</th>
            <td>{{ category.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
