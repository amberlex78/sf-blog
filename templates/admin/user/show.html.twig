{% extends 'admin/layouts/body_card.html.twig' %}

{% block title %}Show User{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}">Users</a></li>
    <li class="breadcrumb-item active">Show</li>
{% endblock %}

{% block actions %}
    {% include 'admin/_embed/_card/_actions.html.twig' with {'entity': user} %}
{% endblock %}

{% block content %}
    <table class="table table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
        </tr>
        <tr>
            <th>First name</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Last name</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Avatar</th>
            <td><img class="img-fluid" src="{{ asset_uploaded(app.user.imagePath) }}" alt=""></td>
        </tr>
        <tr>
            <th>Created at</th>
            <td>{{ user.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated at</th>
            <td>{{ user.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Is verified</th>
            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
