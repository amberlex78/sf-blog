{% extends 'admin/layouts/body.html.twig' %}

{% set headerTitle = 'Pages' %}

{% block title %}{{ headerTitle }}{% endblock %}

{% block content %}
    <div class="card shadow-sm">
        <div class="card-header">
            {% include 'admin/_embed/_card/_header.html.twig' with {'headerTitle': headerTitle} %}
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Is active</th>
                    <th>Created at</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for page in pages %}
                    <tr>
                        <td>{{ page.id }}</td>
                        <td>{{ page.title }}</td>
                        <td>{{ page.slug }}</td>
                        <td>
                            <div class="form-check form-switch">
                                <label>
                                    <input {{ page.isActive ? 'checked' : '' }}
                                           data-model="{{ get_class(page) }}"
                                           data-path="{{ path('admin_ajax_change_status', {'id': page.id}) }}"
                                           class="form-check-input js-checkbox-status"
                                           type="checkbox">
                                </label>
                            </div>
                        </td>
                        <td>{{ page.createdAt|format_date('medium') }}</td>
                        <td>{% include 'admin/_embed/_form/_btn_actions.html.twig' with {'entity': page, 'deleteTitle': page.title} %}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {{ knp_pagination_render(pages) }}
        </div>
    </div>
    {% include 'admin/_embed/_modal/_confirm_deletes.html.twig' %}
{% endblock %}
