{% extends 'front/layouts/body.html.twig' %}
{% set title = category.seoTitle ?: category.name %}

{% block title %}{{ title }}{% endblock %}
{% block meta_title %}{{ title }}{% endblock %}
{% block meta_description %}{{ category.seoDescription ?: title }}{% endblock %}

{% block content %}
    <div class="card mb-4">
        <div class="card-body">
            <h1 class="display-5">{{ category.name }}</h1>
            {{ category.description|raw }}
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            {% for post in posts %}
                <h2 class="display-6">{{ post.title }}</h2>
                <p>{{ post.preview }}</p>
                <div class="d-flex justify-content-between">
                    <p class="small">
                        <i class="fa fa-calendar-alt fa-fw text-muted"></i>
                        {{ post.createdAt|format_date('medium') }}

                        {% for tag in post.tags %}
                            <span class="badge bg-secondary bg-opacity-10">
                                <a href="#"><i class="fa fa-tag fa-fw text-muted"></i>{{ tag.name }}</a>
                            </span>
                        {% endfor %}
                    </p>
                    <p class="small">
                        <a href="{{ path('front_blog_post', {'slug': post.slug}) }}">Read more...</a>
                    </p>
                </div>
                {% if not loop.last %}
                    <hr>
                {% endif %}
            {% else %}
                <p>No posts</p>
            {% endfor %}
            <div class="d-flex justify-content-end">
                {{ knp_pagination_render(posts) }}
            </div>
        </div>
    </div>
{% endblock %}
