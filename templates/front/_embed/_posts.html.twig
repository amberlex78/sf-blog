{% for post in posts %}
    <h2 class="display-6">{{ post.title }}</h2>
    <p>{{ post.preview }}</p>
    <p class="small">
        {% for tag in post.tags %}
            <h6 class="d-inline">
                <span class="badge bg-light my-1">
                    <a href="{{ path('front_blog_tag', {'slug': tag.slug}) }}">
                        <small><i class="fas fa-hashtag fa-fw text-muted"></i></small>{{ tag.name }}
                    </a>
                </span>
            </h6>
        {% endfor %}
    </p>
    <div class="d-flex justify-content-between">
        <p>
            <i class="fa fa-calendar-alt fa-fw text-muted"></i>
            {{ post.createdAt|format_date('medium') }}

            <i class="fa fa-book fa-fw text-muted"></i>
            <a href="{{ path('front_blog_category', {'slug': post.category.slug}) }}"> {{ post.category.name }}</a>
        </p>
        <p><a href="{{ path('front_blog_post', {'slug': post.slug}) }}">Read more...</a></p>
    </div>
    {% if not loop.last %}
        <hr>
    {% endif %}
{% else %}
    <p>No posts</p>
{% endfor %}
<div class="d-flex justify-content-end">
    {{ knp_pagination_render(posts) }}
</div>
