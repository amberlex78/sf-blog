{% extends 'front/layouts/body.html.twig' %}

{% block title %}Profile{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow text-center">
                <div class="card-header bg-primary text-center text-white">
                    <h3 class="mt-2">Welcome to your profile!</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <tbody>
                        <tr>
                            <td>Your email:</td>
                            <td>{{ app.user.email }}</td>
                        </tr>
                        <tr>
                            <td>Created:</td>
                            <td>{{ app.user.createdAt|date('Y-m-d H:i') }}</td>
                        </tr>
                        <tr>
                            <td>Updated:</td>
                            <td>{{ app.user.updatedAt|date('Y-m-d H:i') }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between my-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-edit fa-fw me-1"></i>
                            Edit profile
                        </a>
                        <a href="{{ path('front_logout') }}" class="btn">
                            <i class="fas fa-sign-out-alt fa-fw me-1"></i>
                            Logout
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
